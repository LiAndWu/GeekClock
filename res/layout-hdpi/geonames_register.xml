<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:weightSum="1">
    <LinearLayout android:background="@drawable/bar" android:layout_width="fill_parent" android:weightSum="1" android:baselineAligned="false" android:id="@+id/barLinearLayout" android:layout_height="51dip">

        <Button
            android:id="@+id/backButton"
            android:layout_width="82dip"
            android:layout_height="41dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dip"
            android:layout_weight="0.06"
            android:background="@drawable/button_short_background"
            android:text="上一步"
            android:textStyle="bold" >
</Button>

        <TextView
            android:id="@+id/neverCallTextView"
            android:layout_width="145dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="账号"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="28dip"
            android:textStyle="bold" >
</TextView>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="82dip"
            android:layout_height="41dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="3dip"
            android:layout_weight="0.06"
            android:background="@drawable/button_short_background"
            android:text="确定"
            android:textStyle="bold" >
</Button>
    </LinearLayout>

    <TextView
        android:id="@+id/showUsernameTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="15dip"
        android:lines="2"
        android:text="正在使用的账户是："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dip"
        android:textStyle="bold" >
</TextView>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:maxLength="25" >

    </EditText>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:weightSum="1">
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:layout_marginTop="45dip"
        android:text="没有用户名？ 点击下方注册："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dip"
        android:textStyle="bold" >
</TextView>
    <ImageView android:src="@drawable/register" android:id="@+id/registerImageView" android:clickable="true" android:layout_width="fill_parent" android:layout_marginTop="3dip" android:layout_height="200dip"></ImageView>
    
</LinearLayout>
